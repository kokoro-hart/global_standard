<% let title = (pageId === 'home') ? jsonData.siteInfo.name : jsonData.pages[pageId].name + ' | ' + jsonData.siteInfo.name%>
<% let description = jsonData.pages[pageId].description %>
<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="utf-8">
  <meta name="format-detection" content="telephone=no">
  <meta name="viewport" content="width=device-width">
  <link rel="apple-touch-icon" href="/img/common/apple-touch-icon.png">

  <title><%= title %></title>
  <meta name="description" content="<%= description %>">

  <meta property="og:title" content="<%= title %>">
  <meta property="og:description" content="<%= description %>">
  <meta property="og:url" content="<%= jsonData.siteInfo.siteUrl + jsonData.pages[pageId].slug %>">
  <meta property="og:type" content="<%= jsonData.pages[pageId].type %> ">
  <meta property="og:local" content="ja_JP">
  <meta property="og:image" content="/common/og-image.jpg">
  <meta property="og:site_name" content="<%= jsonData.siteInfo.siteUrl %> ">

  <link rel="stylesheet" type="text/css" href="/css/style.css">

</head>

<body>

  <div id="wrapper">
    <header class="l-header">
      <div class="l-header__inner">
        <% if (pageId === 'home'){ %>
        <h1 class="l-header-logo">
          <img src="/img/common/logo01.png" alt="Global Standard" class="l-header-logo__img">
        </h1>
        <% } else { %>
          <h1 class="l-header-logo">
            <a class="l-header-logo__link" href="/">
              <img src="../img/common/logo01.png" alt="Global Standard" class="l-header-logo__img">
            </a>
          </h1>
        <% } %>

        <nav class="c-global-nav" id="js-global-nav" area-hidden="true">
          <ul class="c-global-nav__list">
            <% for(let page in jsonData.pages){ %>
              <% if (page===pageId) { %>
                <li class="c-global-nav__item"><%= jsonData.pages[page].name %></li>
              <% } else { %>
                <li class="c-global-nav__item">
                  <a class="c-global-nav__link" href="<%= jsonData.pages[page].slug %>">
                    <%= jsonData.pages[page].name %>
                  </a>
                </li>
              <% } %>
            <% }; %>
          </ul>
          <div class="c-global-nav__button-area">
            <a href="" class="c-global-nav__button">資料ダウンロード</a>
            <a href="" class="c-global-nav__button c-global-nav__button--color-reverse">お問い合わせ</a>
          </div>
        </nav>

        <button id="js-drawer" class="c-drawer-button u-hidden-xl-up" aria-controls="js-glabal-menu" aria-expanded="false"
          area-label="メニューを開閉する">
          <span class="c-drawer-button__line"></span>
          <span class="c-drawer-button__line"></span>
          <span class="c-drawer-button__line"></span>
        </button>
      </div>
    </header>