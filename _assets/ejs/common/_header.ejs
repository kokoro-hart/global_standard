<% let title = (pageId === 'home') ? jsonData.siteInfo.name : jsonData.pages[pageId].name + ' | ' + jsonData.siteInfo.name%>
<% let description = jsonData.pages[pageId].description %>
<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="utf-8">
  <meta name="format-detection" content="telephone=no">
  <meta name="viewport" content="width=device-width">
  <link rel="apple-touch-icon" href="/img/common/apple-touch-icon.png">

  <title><%= title %></title>
  <meta name="description" content="<%= description %>">

  <meta property="og:title" content="<%= title %>">
  <meta property="og:description" content="<%= description %>">
  <meta property="og:url" content="<%= jsonData.siteInfo.siteUrl + jsonData.pages[pageId].slug %>">
  <meta property="og:type" content="<%= jsonData.pages[pageId].type %> ">
  <meta property="og:local" content="ja_JP">
  <meta property="og:image" content="/img/common/og-image.jpeg">
  <meta property="og:site_name" content="<%= jsonData.siteInfo.siteUrl %> ">

  <link rel="stylesheet" type="text/css" href="/css/style.css">

</head>

<body>

  <!--wrapper-->
  <div id="wrapper" class="page-wrapper">
    <!--ヘッダー-->
    <header class="l-header p-header">
      <div class="p-header__inner">
        <% if (pageId === 'home'){ %>
        <h1 class="p-header__logo">
          Global Standard
        </h1>
        <% } else { %>
          <h1 class="p-header__logo">
            <a class="p-header__logo-link" href="/">
              Global Standard
            </a>
          </h1>
        <% } %>

        <nav class="p-global-nav" id="js-global-nav" area-hidden="true" area-label="ページ内のメニュー">
          <ul class="p-global-nav__list">
            <% for(let page in jsonData.pages){ %>
              <% if (page===pageId) { %>
                <li class="p-global-nav__item">
                  <a class="p-global-nav__link">
                    <%= jsonData.pages[page].name %>
                  </a>
                </li>
              <% } else { %>
                <li class="p-global-nav__item">
                  <a class="p-global-nav__link" href="<%= jsonData.pages[page].slug %>">
                    <%= jsonData.pages[page].name %>
                  </a>
                </li>
              <% } %>
            <% }; %>
          </ul>
        </nav>

        <button id="js-drawer" class="c-button-drawer u-hidden-xl-up" aria-controls="js-glabal-nav" aria-expanded="false" area-label="メニューを開閉する">
          <span class="c-button-drawer__line"></span>
          <span class="c-button-drawer__line"></span>
          <span class="c-button-drawer__line"></span>
        </button>
      </div>
    </header>
    <!--/ヘッダー-->